---
import Layout from "@/layouts/Layout.astro";
import { ASESORIA_EMPRESA_ESPECIALIDADES } from "@/data/areas/asesoria-empresa";

const featured = ASESORIA_EMPRESA_ESPECIALIDADES.filter((c) => c.featured);
const nonFeatured = ASESORIA_EMPRESA_ESPECIALIDADES.filter((c) => !c.featured);
---

<Layout title="Área Asesoría de Imagen para Empresas">
  <!-- HERO DEL ÁREA -->
  <section class="relative w-full bg-[#0b1a33] text-white font-[Verdana,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif] overflow-hidden">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute inset-0 bg-[linear-gradient(180deg,rgba(255,255,255,0.06)_0%,transparent_40%)]"></div>
      <div class="absolute -top-16 -right-10 w-[520px] h-[520px] rounded-full bg-white/5 blur-3xl"></div>
      <div class="absolute -bottom-24 -left-14 w-[420px] h-[420px] rounded-full bg-white/5 blur-3xl"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-6 md:px-12 py-14 md:py-18">
      <nav aria-label="breadcrumb" class="text-sm text-white/70">
        <a href="/" class="hover:text-[#facc15] transition-colors">Inicio</a>
        <span class="px-2">/</span>
        <a href="/cursos" class="hover:text-[#facc15] transition-colors">Cursos</a>
        <span class="px-2">/</span>
        <span class="text-white">Asesoría de Imagen para Empresas</span>
      </nav>

      <div class="mt-6 max-w-3xl">
        <p class="text-xs font-semibold uppercase tracking-[0.18em] text-[#facc15]">
          Área de formación
        </p>
        <h1 class="mt-2 text-3xl md:text-5xl font-extrabold leading-tight">
          Asesoría de Imagen para Empresas
        </h1>
        <p class="mt-3 md:mt-4 text-base md:text-lg text-white/80 leading-relaxed">
          Nuestros cursos se enfocan en comprender el espíritu de cada empresa y
          materializarlo en la imagen personal de sus trabajadores, generando una
          imagen corporativa coherente y profesional.
        </p>
        <p class="mt-2 text-sm md:text-base text-white/75">
          Modalidad presencial, con opciones remotas y mixtas según requerimiento.
        </p>

        <div class="mt-6">
          <a
            href="#cursos"
            class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl font-semibold text-[#0b1a33]
                   bg-[#facc15] hover:brightness-110 transition-all shadow-[0_10px_24px_rgba(250,204,21,.35)]"
          >
            Explorar cursos
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- BANNER CONTEXTUAL -->
  <section class="relative h-56 md:h-72 w-full overflow-hidden">
    <img 
      src="/img/asesoria-empresa/lienzo-asesoria-imagen.jpg" 
      alt="Asesoría de imagen para empresas"
      class="w-full h-full object-cover object-center"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-[#0b1a33]/90 via-[#0b1a33]/70 to-transparent flex items-center">
      <div class="max-w-7xl mx-auto px-6 md:px-12 w-full">
        <div class="max-w-2xl">
          <p class="text-white text-lg md:text-2xl font-bold leading-tight">
            Imagen coherente entre lo que la empresa dice y lo que proyecta su gente
          </p>
          <p class="mt-2 text-white/80 text-sm md:text-base">
            Programas que alinean vestuario, color, presencia y estilo personal con la
            identidad corporativa y la experiencia del cliente.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CURSOS DESTACADOS -->
  {featured.length > 0 && (
    <section class="bg-gradient-to-b from-white to-slate-50 py-16 border-b border-slate-200">
      <div class="max-w-7xl mx-auto px-6 md:px-12">
        <header class="mb-10 text-center">
          <span class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-[#2563eb]/10 text-[#2563eb] text-xs font-semibold uppercase tracking-wider mb-3">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            Cursos destacados
          </span>
          
          <h2 class="mt-3 text-2xl md:text-4xl font-extrabold text-slate-900">
            Programas clave en imagen corporativa
          </h2>
          <p class="mt-3 text-sm md:text-base text-slate-600 max-w-2xl mx-auto">
            Cursos diseñados para alinear la presencia personal de los colaboradores
            con la cultura, valores e identidad visual de la organización.
          </p>
        </header>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {featured.map((curso) => (
            <article class="group relative flex flex-col rounded-2xl border-2 border-[#2563eb]/20 bg-white shadow-lg hover:shadow-2xl hover:border-[#2563eb]/40 hover:-translate-y-2 transition-all duration-300 overflow-hidden">
              
              {/* Badge destacado */}
              <div class="absolute top-3 right-3 z-10">
                <span class="inline-flex items-center gap-1 px-2.5 py-1 rounded-full bg-[#facc15] text-[#0b1a33] text-xs font-bold shadow-md">
                  <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  Destacado
                </span>
              </div>

              {/* Imagen */}
              <div class="relative h-52 w-full overflow-hidden">
                <img
                  src={curso.image}
                  alt={curso.title}
                  loading="lazy"
                  class="h-full w-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>

              {/* Contenido */}
              <div class="p-6 flex flex-col flex-1">
                <h3 class="text-lg font-bold text-slate-900 leading-tight group-hover:text-[#2563eb] transition-colors">
                  {curso.title}
                </h3>
                
                <p class="mt-3 text-sm text-slate-600 leading-relaxed flex-1 line-clamp-3">
                  {curso.shortDesc}
                </p>

                {/* Footer con CTA */}
                <div class="mt-5 pt-4 border-t border-slate-100 flex items-center justify-between">
                  <span class="text-xs font-medium text-slate-500">Área Asesoría de Imagen</span>
                  <a
                    href={`/areas/asesoria-empresa/${curso.id}`}
                    class="inline-flex items-center gap-1.5 px-4 py-2 rounded-lg bg-[#2563eb] text-white text-sm font-semibold hover:bg-[#1d4ed8] hover:gap-2.5 transition-all shadow-sm"
                  >
                    Ver detalles
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- TODOS LOS CURSOS -->
  <section id="cursos" class="bg-slate-50 py-16">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      <header class="mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-slate-900">
          Todos los cursos del área
        </h2>
        <p class="mt-2 text-sm md:text-base text-slate-600 max-w-2xl">
          Revisa el portafolio completo de cursos de Asesoría de Imagen para Empresas.
          Cada programa está diseñado para conectar la identidad corporativa con la imagen
          de los equipos que la representan día a día.
        </p>
      </header>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {nonFeatured.map((curso) => (
          <article class="group rounded-2xl border border-slate-200 bg-white shadow-sm hover:shadow-lg hover:-translate-y-1 hover:border-slate-300 transition-all duration-200 flex flex-col overflow-hidden">
            <div class="relative h-44 w-full overflow-hidden">
              <img
                src={curso.image}
                alt={curso.title}
                loading="lazy"
                class="h-full w-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </div>

            <div class="p-6 flex flex-col flex-1">
              <h3 class="text-lg font-bold text-slate-900 leading-tight group-hover:text-[#2563eb] transition-colors">
                {curso.title}
              </h3>
              
              <p class="mt-3 text-sm text-slate-600 leading-relaxed flex-1 line-clamp-3">
                {curso.shortDesc}
              </p>

              <div class="mt-5 pt-4 border-t border-slate-100 flex items-center justify-between">
                <span class="text-xs font-medium text-slate-500">Área Asesoría de Imagen</span>
                <a
                  href={`/areas/asesoria-empresa/${curso.id}`}
                  class="inline-flex items-center gap-1.5 px-4 py-2 rounded-lg bg-[#0b1a33] text-white text-sm font-semibold hover:bg-[#0b1a33]/90 hover:gap-2.5 transition-all shadow-sm"
                >
                  Ver detalles
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
