---
import Layout from "@/layouts/Layout.astro"
import HeroNosotros from "@/components/nosotros/HeroNosotros.astro"
import FormPostulacion from "@/components/trabajaConNosotros/FormPostulacion.astro"
---

<Layout title="Trabaja con Nosotros | CyC Consultores">
  <HeroNosotros
    title="Trabaja con Nosotros"
    subtitle="Súmate a un equipo enfocado en calidad, impacto y aprendizaje continuo."
    breadcrumbHereLabel = "Trabaja con nosotros"
    ctaPrimaryHref="#postulacion"
    ctaPrimaryLabel="Postular ahora"
    ctaSecondaryHref="/contacto#ContactFAQ.astro"
    ctaSecondaryLabel="Dudas rápidas"
  />

  <section id="postulacion" class="py-16 bg-white font-[Verdana,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif]">
    <div class="max-w-7xl mx-auto px-6 md:px-12">
      <FormPostulacion />
    </div>
  </section>

</Layout>