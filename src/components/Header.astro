// Obtener la ruta actual
const currentPath = Astro.url.pathname;

// Función para verificar si un link está activo
const isActive = (path: string) => {
  if (path === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(path);
};

// Clases para links activos e inactivos
const getLinkClass = (path: string, hasDropdown = false) => {
  const baseClass = "px-3 lg:px-5 py-4 text-base lg:text-lg font-medium transition-colors rounded-md";
  const activeClass = "text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-gray-800";
  const inactiveClass = "text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 hover:bg-gray-100 dark:hover:bg-gray-800";
  
  const isCurrentActive = isActive(path);
  const dropdownClass = hasDropdown ? "flex items-center" : "";
  
  return `${baseClass} ${isCurrentActive ? activeClass : inactiveClass} ${dropdownClass}`;
};
