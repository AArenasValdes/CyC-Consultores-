---
import type { Especialidad } from "@/data/areas/types.ts"; 

interface Props {
  items: Especialidad[];
  areaSlug: string; // 
}

const { items, areaSlug } = Astro.props;
---

<section class="bg-white py-16">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    <header class="mb-8">
      <h2 class="text-2xl md:text-3xl font-bold text-slate-900">
        Especialidades de esta área
      </h2>
      <p class="mt-2 text-sm md:text-base text-slate-600 max-w-2xl">
        Selecciona una especialidad para ver el detalle de los programas asociados y solicitar una cotización.
      </p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {items.map((esp) => (
        <article class="group rounded-2xl border border-slate-200 bg-white p-5 shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-200 flex flex-col">
          <h3 class="text-lg font-semibold text-slate-900 group-hover:text-[#2563eb]">
            {esp.title}
          </h3>
          <p class="mt-2 text-sm text-slate-600 flex-1">
            {esp.shortDesc}
          </p>

          <div class="mt-4 flex items-center justify-between text-xs text-slate-500">
            <span>Ver detalle y cursos asociados</span>
            <a
              href={`/areas/${areaSlug}/${esp.id}`}
              class="inline-flex items-center gap-1 text-[#2563eb] font-semibold hover:text-[#1d4ed8]"
            >
              Explorar
              <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7" />
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>
