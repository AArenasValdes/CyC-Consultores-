---
interface Props {
  title?: string;
  name?: string;
  role?: string;
  message?: string;
  photoSrc?: string; // ruta a la imagen 
  variant?: "dark" | "light"; // "dark" = fondo azul marino, "light" = fondo claro
}

const {
  title = "Palabras del Director",
  name = "Nombre del Director",
  role = "Director General",
  message = "Nuestra labor es transformar capacidades en resultados medibles, con foco en excelencia operativa, ética profesional y acompañamiento real a cada cliente.",
  photoSrc = "../public/logosCEOS/EricDirector.jpg",
  variant = "light",
} = Astro.props;

const navy = "#0b1a33";
const accent = "#facc15";
const isDark = variant === "dark";
---

<section class={`w-full ${isDark ? "" : "bg-white"} font-[Verdana,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif]`}>
  <div class={`relative ${isDark ? "bg-[#0b1a33] text-white" : "text-[#0b1a33]"}`}>
    
    <!-- Fondo sutil para variante dark -->
    {isDark ? (
      <div class="absolute inset-0 pointer-events-none">
        <div class="absolute inset-0 bg-[linear-gradient(180deg,rgba(255,255,255,0.06)_0%,transparent_35%)]"></div>
        <div class="absolute -top-16 -right-10 w-[520px] h-[520px] rounded-full bg-white/5 blur-3xl"></div>
        <div class="absolute -bottom-24 -left-14 w-[420px] h-[420px] rounded-full bg-white/5 blur-3xl"></div>
      </div>
    ) : null}

    <div class="relative max-w-7xl mx-auto px-6 md:px-12 py-16 md:py-20">
      <!-- Encabezado -->
      <header class="mb-8 text-center md:text-left">
        <h2 class={`text-3xl md:text-4xl font-bold ${isDark ? "text-white" : "text-[#0b1a33]"}`}>
          {title}
        </h2>
        <div class="mt-3 h-[3px] w-20 rounded-full mx-auto md:mx-0" style={`background: linear-gradient(90deg, ${accent}, ${navy})`}></div>
      </header>

      <!-- Contenido -->
      <div class="grid md:grid-cols-5 gap-8 items-center">
        <!-- Foto -->
        <div class="w-full lg:col-span-1 ">
          <div class={`overflow-hidden rounded-2xl border ${isDark ? "border-white/20" : "border-slate-200"} shadow-sm`}>
            <img src={photoSrc} alt={`Foto de ${name}`} class="w-full h-auto object-cover" />
          </div>
        </div>

        <!-- Texto -->
        <div class="md:col-span-3">
          <figure class={`rounded-2xl ${isDark ? "bg-white/5 border-white/20" : "bg-white border-slate-200"} border shadow-sm p-6`}>
            <!-- Comillas decorativas -->
            <svg aria-hidden="true" class={`w-8 h-8 ${isDark ? "text-white/40" : "text-slate-400"} mb-3`} viewBox="0 0 24 24" fill="currentColor">
              <path d="M7.17 6.17C5.42 7.66 4.5 9.45 4.5 11.5c0 1.85.73 3.17 2.2 3.96 1.05.56 1.58 1.29 1.58 2.2 0 .73-.25 1.33-.75 1.8-.5.46-1.13.69-1.9.69-1.13 0-2.05-.4-2.75-1.2C1.18 17.15.75 15.97.75 14.5c0-2.7 1.21-5.14 3.63-7.3L7.17 6.17Zm11 0c-1.75 1.49-2.62 3.28-2.62 5.33 0 1.85.74 3.17 2.2 3.96 1.05.56 1.58 1.29 1.58 2.2 0 .73-.25 1.33-.75 1.8-.5.46-1.13.69-1.9.69-1.13 0-2.05-.4-2.75-1.2-.57-.66-.86-1.84-.86-3.31 0-2.7 1.21-5.14 3.63-7.3l1.47-1.17Z"/>
            </svg>

            <blockquote class={`text-base md:text-lg leading-relaxed ${isDark ? "text-white/90" : "text-slate-700"}`}>
              {message}
            </blockquote>

            <figcaption class="mt-5 flex items-center gap-3">
              <div class="w-10 h-10 rounded-full" style={`background: linear-gradient(135deg, ${accent}, ${navy})`}></div>
              <div>
                <div class={`font-semibold ${isDark ? "text-white" : "text-[#0b1a33]"}`}>{name}</div>
                <div class={`${isDark ? "text-white/70" : "text-slate-600"} text-sm`}>{role}</div>
              </div>
            </figcaption>
          </figure>
        </div>
      </div>
    </div>
  </div>
</section>
