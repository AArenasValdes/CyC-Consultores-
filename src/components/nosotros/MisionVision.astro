---
interface Props {
  title?: string;
  missionTitle?: string;
  missionText?: string;
  visionTitle?: string;
  visionText?: string;
}

const {
  title = "Misión y Visión",
  missionTitle = "Nuestra Misión",
  missionText = "Tenemos como misión entregar un servicio de excelencia para las empresas, personas y especialistas que requieran capacitación, entrenamiento y perfeccionamiento en distintas áreas de formación. Inspirar reconocimiento de excelencia de nuestros cursos y dejar huella en cada uno de nuestros clientes.",
  visionTitle = "Nuestra Visión",
  visionText = "Como visión se ha propuesto establecer un liderazgo en las capacitaciones, recursos humanos y gestión de procesos a nivel nacional, en base a la calidad humana de nuestros colaboradores, respecto a la entrega del servicio y comportamiento ético, en función de aumentar la rentabilidad de la empresa. Con esto, ser la mejor opción entre Calidad y Servicios.",
} = Astro.props;
---

<section class="bg-white font-[Verdana,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif] py-16">
  <div class="max-w-7xl mx-auto px-6 md:px-12">
    <!-- Encabezado -->
    <header class="text-center mb-10">
      <h2 class="text-3xl md:text-4xl font-bold text-[#0b1a33]">{title}</h2>
      <div class="mt-3 h-[3px] w-20 mx-auto rounded-full" style={`background: linear-gradient(90deg,#facc15,#0b1a33)`}></div>
    </header>

    <!-- Grid 2 columnas -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Misión -->
      <article class="rounded-2xl border border-slate-200 bg-white shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden flex flex-col">
        <div class="flex items-center gap-3 px-6 pt-6">
          <div class="w-11 h-11 rounded-full bg-[#0b1a33] text-white grid place-items-center border-2 border-[#facc15]/60">
            <!-- Ícono: target -->
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6l4 2M12 3a9 9 0 100 18 9 9 0 000-18z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-[#0b1a33]">{missionTitle}</h3>
        </div>
        <div class="p-6 pt-4 flex-1">
          <p class="text-slate-700 leading-relaxed">
            {missionText}
          </p>
        </div>
        <div class="h-1" style={`background: linear-gradient(90deg,#facc15,#0b1a33)`}></div>
      </article>

      <!-- Visión -->
      <article class="rounded-2xl border border-slate-200 bg-white shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden flex flex-col">
        <div class="flex items-center gap-3 px-6 pt-6">
          <div class="w-11 h-11 rounded-full bg-[#0b1a33] text-white grid place-items-center border-2 border-[#facc15]/60">
            <!-- Ícono: eye -->
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-[#0b1a33]">{visionTitle}</h3>
        </div>
        <div class="p-6 pt-4 flex-1">
          <p class="text-slate-700 leading-relaxed">
            {visionText}
          </p>
        </div>
        <div class="h-1" style={`background: linear-gradient(90deg,#facc15,#0b1a33)`}></div>
      </article>
    </div>
  </div>
</section>