---
interface Props {
  title?: string;
  subtitle?: string;
  primaryHref?: string;
  primaryLabel?: string;
  secondaryHref?: string;
  secondaryLabel?: string;
}

const {
  title = "¿Listo para capacitar a tu equipo?",
  subtitle = "Conversemos sobre las necesidades de tu empresa y armemos un plan de formación a la medida.",
  primaryHref = "/contacto",
  primaryLabel = "Contactar a un asesor",
  secondaryHref = "/nosotros",
  secondaryLabel = "Conocer más sobre CyC"
} = Astro.props;
---

<section class="bg-[#0b1a33] py-16 text-center text-white font-[Verdana,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif]">
  <h2 class="text-3xl font-bold">
    {title}
  </h2>
  <p class="mt-2 text-white/80 text-sm max-w-xl mx-auto">
    {subtitle}
  </p>

  <div class="mt-6 flex flex-col sm:flex-row gap-4 justify-center">
    <a
      href={primaryHref}
      class="px-6 py-3 rounded-xl font-semibold text-[#0b1a33] bg-[#facc15] hover:brightness-110 transition-all shadow-[0_10px_24px_rgba(250,204,21,.35)]"
    >
      {primaryLabel}
    </a>

    <a
      href={secondaryHref}
      class="px-6 py-3 rounded-xl border border-white/30 font-semibold text-white hover:bg-white/10 transition-all"
    >
      {secondaryLabel}
    </a>
  </div>
</section>
