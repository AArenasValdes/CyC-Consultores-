---
interface Item {title: string; desc: string;} 

const {
  title = "Nuestro compromiso con tu empresa",
  subtitle = "Trabajamos con estándares altos y acompañamiento constante para asegurar resultados medibles.",
  items = [
    { title: "Calidad y mejora continua", desc: "Aplicamos buenas prácticas, control y retroalimentación permanente." },
    { title: "Flexibilidad y adaptación", desc: "Ajustamos el trabajo a tu contexto, prioridades y tiempos." },
    { title: "Acompañamiento integral", desc: "Estamos durante y después de la implementación, sin dejar cabos sueltos." },
    { title: "Resultados comprobables", desc: "Indicadores claros y reportes entendibles para la toma de decisiones." },
  ] as Item[],
  // Colores: mismo azul marino que estás usando en botones
  primary = "#1e40af"
} = Astro.props;

---
<!----Titulo y Subitutlo -->
<section class="mx-auto max-w-6xl px-6 md:px-12 py-18 mt-18 bg-white">
  <header class="max-w-3xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-bold text-slate-900 font-[Verdana]">{title}</h2>
    <p class="text-slate-600 mt-2 font-[Verdana]">{subtitle}</p>
    <div class="mt-4 h-[2px] w-16" style={`background:${primary}`}></div>
  </header>

  <!----Array de objetos -->
  <div class="mt-8 grid gap-6 sm:grid-cols-2">
    {items.map((it: Item) => (
      <article class="rounded-2xl border border-slate-200 bg-white p-6 hover:shadow-md transition-shadow">
        <!-- Icono check dentro de un círculo -->
        <div class="flex items-start gap-4">
          <span class="inline-grid place-items-center size-10 rounded-full"
                style={`background:${primary}1a` /* ~10% */}>
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none"
                 stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                 style={`color:${primary}`}>
              <path d="M20 6L9 17l-5-5" />
            </svg>
          </span>

          <div class="font-[Verdana]">
            <h3 class="text-lg font-semibold text-slate-900">{it.title}</h3>
            <p class="text-slate-600 mt-1">{it.desc}</p>
          </div>
        </div>
      </article>
    ))}
  </div>
</section>