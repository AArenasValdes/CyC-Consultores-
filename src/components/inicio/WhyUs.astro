---
interface Reason {
    title: string;
    desc: string;
}

const {
    title = "¿Por qué elegirnos?",
    subtitle = "Menos palabras , más resultados.",
    reasons = [
        {
            title: "Experiencia Comprobada",
            desc: "Años de experiencia en el sector nos avalan."
        },
        {
            title: "Soluciones Reales",
            desc: "Adaptamos nuestras estrategias a tus necesidades específicas."
        },
        {
            title: "Ejecución senior",
            desc: "Equipo con experiencia en SEO, Ads, CRO y contenido."
        },
        {
            title: "Resultados Medibles",
            desc: "Nos enfocamos en entregar resultados tangibles y medibles."
        }
    ] as Reason[],
    variant = "design", // "design" | "image"
    imageSrc = "/assets/why-us-illustration.svg",
    imageAlt = "Equipo marca"
    } = Astro.props; //  variables que recibe el componente para personalizar su contenido
    ---
    
    <section id="por-que" class="mx-auto max-w-6xl px-6 md:px-12 py-14">
  <div class="grid lg:grid-cols-2 gap-8 items-center">
    <!-- Texto -->
    <div>
      <h2 class="font-[Montserrat] font-extrabold text-3xl md:text-4xl">{title}</h2>
      <p class="text-textMuted mt-2 text-2xl">{subtitle}</p>

      <div class="mt-6 grid gap-4 text-2xl">
        {reasons.map((r: { title: string; desc: string; }) => (
          <article class="flex items-start gap-4 rounded-2xl border border-white/10 bg-white/5 p-5 hover:bg-white/7 transition">
            <div class="shrink-0 text-clearBlue" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="h-6 w-6">
                <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zm4.28 7.22a.75.75 0 10-1.06-1.06l-4.72 4.72-1.72-1.72a.75.75 0 10-1.06 1.06l2.25 2.25c.293.293.767.293 1.06 0l5.25-5.25z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-2x1">{r.title}</h3>
              <p class="text-textMuted mt-1 text-lg">{r.desc}</p>
            </div>
          </article>
        ))}
      </div>
    </div>

      <!-- Lado derecho (diseño o imagen) -->

    {variant === "design" ? (
      <div class="relative min-h-[340px] grid place-items-center">
        <div
          class="w-[min(92%,520px)] aspect-square
                 rounded-[36%_64%_58%_42%/40%_35%_65%_60%]
                 animate-float
                 shadow-[inset_0_0_70px_rgba(255,255,255,.05),0_40px_120px_rgba(0,0,0,.45)]
                 [background:radial-gradient(80%_70%_at_30%_20%,rgba(59,130,246,.55),transparent_60%),radial-gradient(70%_60%_at_70%_80%,rgba(236,72,153,.45),transparent_60%),linear-gradient(135deg,rgba(59,130,246,.65),rgba(37,99,235,.65))]"
          aria-hidden="true">
        </div>
      </div>
    ) : (
      <div class="relative">
        <img
          src={imageSrc}
          alt={imageAlt}
          loading="lazy"
          class="w-full h-[340px] md:h-[420px] object-cover rounded-2xl border border-white/10"
        />
        <!-- Badge sutil -->
        <span class="absolute bottom-3 left-3 text-[11px] px-2 py-0.5 rounded-full 
                     border border-pinkAccent/40 bg-pinkAccent/15 text-pink-100 backdrop-blur">
          Nuestro equipo
        </span>
      </div>
    )}
  </div>
</section>