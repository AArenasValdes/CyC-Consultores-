---
const brand = { navy: "#0b1a33", accent: "#facc15" };
const contact = {
  phone: "+56 9 5397 6610",
  email: "contacto@consultorescyc.cl",
  whatsapp: "https://wa.me/56953976610",
};
---

<section class="bg-white font-[Verdana,system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif]">
  <div class="max-w-7xl mx-auto px-6 md:px-12 py-8 grid gap-4 sm:grid-cols-3">
    <a href={contact.whatsapp} target="_blank"
       class="group rounded-2xl border border-slate-200 p-5 hover:shadow-md transition">
      <div class="text-[#0b1a33] font-semibold">WhatsApp</div>
      <div class="text-slate-600">Respuesta rápida</div>
      <div class="mt-2 inline-flex items-center gap-2 text-[#0b1a33] group-hover:text-[#facc15]">
        {contact.phone}
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/></svg>
      </div>
    </a>

    <a href={`mailto:${contact.email}`}
       class="group rounded-2xl border border-slate-200 p-5 hover:shadow-md transition">
      <div class="text-[#0b1a33] font-semibold">Correo</div>
      <div class="text-slate-600">Responderemos dentro de 24h hábiles</div>
      <div class="mt-2 inline-flex items-center gap-2 text-[#0b1a33] group-hover:text-[#facc15]">
        {contact.email}
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m9 5 7 7-7 7"/></svg>
      </div>
    </a>

    <div class="rounded-2xl border border-slate-200 p-5">
      <div class="text-[#0b1a33] font-semibold">Horario</div>
      <div class="text-slate-600">Lunes a Viernes · 9:00–18:30</div>
    </div>
  </div>
</section>
