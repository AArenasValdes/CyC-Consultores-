<script define:vars={{ cursosPorArea }}>
  // Manejo de campos dinámicos
  const asuntoSelect = document.getElementById('asunto-select');
  const camposCapacitaciones = document.getElementById('campos-capacitaciones');
  const areaSelect = document.getElementById('area-select');
  const cursoSelect = document.getElementById('curso-select');

  // Mostrar/ocultar campos de capacitaciones
  asuntoSelect?.addEventListener('change', (e) => {
    const valor = (e.target instanceof HTMLSelectElement) ? e.target.value : '';
    if (valor === 'capacitaciones') {
      camposCapacitaciones?.classList.remove('hidden');
      // Hacer campos requeridos
      areaSelect?.setAttribute('required', 'true');
      cursoSelect?.setAttribute('required', 'true');
    } else {
      camposCapacitaciones?.classList.add('hidden');
      // Quitar requeridos
      areaSelect?.removeAttribute('required');
      cursoSelect?.removeAttribute('required');
      // Limpiar selecciones
      if (areaSelect) areaSelect.value = '';
      if (cursoSelect) {
        cursoSelect.value = '';
        cursoSelect.disabled = true;
        cursoSelect.innerHTML = '<option value="">- Primero selecciona un área -</option>';
      }
    }
  });

  // Cargar cursos según área seleccionada
  areaSelect?.addEventListener('change', (e) => {
    const areaId = (e.target instanceof HTMLSelectElement) ? e.target.value : '';
    
    if (!areaId || !cursoSelect) {
      if (cursoSelect) {
        cursoSelect.disabled = true;
        cursoSelect.innerHTML = '<option value="">- Primero selecciona un área -</option>';
      }
      return;
    }

    const cursos = cursosPorArea[areaId] || [];
    
    cursoSelect.disabled = false;
    cursoSelect.innerHTML = '<option value="">- Seleccionar curso -</option>' +
      cursos.map((curso) => `<option value="${curso}">${curso}</option>`).join('');
  });

  // Manejo del envío del formulario
  window.handleContactSubmit = (e) => {
    e.preventDefault();
    const form = e.target instanceof HTMLFormElement ? e.target : null;
    if (!form) return false;
    const fd = new FormData(form);
    const data = Object.fromEntries(fd.entries());
    const msgEl = document.getElementById('form-msg');

    // Construir el cuerpo del email
    let body = `Nombre: ${data.nombre}\nEmpresa: ${data.empresa || "-"}\nCorreo: ${data.email}\nTeléfono: ${data.telefono}\nAsunto: ${data.asunto}\n\n`;

    // Si es capacitación, agregar detalles adicionales
    if (data.asunto === 'capacitaciones') {
      body += `--- DETALLES DE CAPACITACIÓN ---\n`;
      body += `Área: ${data.area || "-"}\n`;
      body += `Curso: ${data.curso || "-"}\n`;
      body += `Cantidad de Alumnos: ${data.cantidad_alumnos || "-"}\n`;
      body += `Modalidad: ${data.modalidad || "-"}\n\n`;
    }

    body += `Mensaje:\n${data.mensaje}\n`;

    // Enviar por mailto (puedes cambiar esto por un endpoint de API)
    const subject = encodeURIComponent(`Consulta: ${data.asunto}`);
    const mailtoBody = encodeURIComponent(body);
    window.location.href = `mailto:contacto@consultorescyc.cl?subject=${subject}&body=${mailtoBody}`;

    // Mostrar mensaje de éxito
    if (msgEl) {
