      msgEl.classList.remove('hidden');
      msgEl.classList.add('text-green-600');
      form.reset();
      
      // Ocultar campos de capacitaciones si estaban visibles
      const camposCapacitaciones = document.getElementById('campos-capacitaciones');
      if (camposCapacitaciones) {
        camposCapacitaciones.classList.add('hidden');
      }
      
